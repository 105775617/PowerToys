<UserControl x:Class="ColorPicker.Controls.ColorPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorPicker.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="350" Width="310">
    <StackPanel x:Name="PickerPanel" Orientation="Vertical" Background="{x:Null}" >
        <!--Top panel-->
        <Grid HorizontalAlignment="Center">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="LightPink" x:Name="colorVariation1Border" Opacity="0.5" CornerRadius="2,0,0,2" MouseLeftButtonDown="ColorVariationBorder_MouseLeftButtonDown"/>
            <Border Grid.Column="1" Background="LightPink" x:Name="colorVariation2Border" Opacity="0.7" MouseLeftButtonDown="ColorVariationBorder_MouseLeftButtonDown"/>
            <Border Grid.Column="3" Background="LightPink" x:Name="colorVariation3Border" Opacity="0.7" MouseLeftButtonDown="ColorVariationBorder_MouseLeftButtonDown"/>
            <Border Grid.Column="4" Background="LightPink" x:Name="colorVariation4Border" Opacity="0.5" CornerRadius="0,2,2,0" MouseLeftButtonDown="ColorVariationBorder_MouseLeftButtonDown"/>
            <Border HorizontalAlignment="Left" Grid.Column="0" Grid.ColumnSpan="5" Margin="80,0,0,0" Opacity="1" x:Name="CurrentColorBorder" Width="140" Background="Red" Height="40" MouseDown="CurrentColorBorder_MouseDown"/>
        </Grid>

        <!--Details panel-->
        <Grid Margin="0,10,0,0" Height="0" x:Name="detailsGrid" >
            <Border Background="#313233"/>
            <StackPanel x:Name="detailsStackPanel" Opacity="0">
                <Grid Margin="6,10,0,0" x:Name="SpectrumGrid" HorizontalAlignment="Left" Height="40" Width="300" MouseLeftButtonDown="SpectrumGrid_MouseLeftButtonDown" MouseMove="SpectrumGrid_MouseMove">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
                    </Grid.Effect>
                    <Border VerticalAlignment="Stretch" Width="3" x:Name="spectrumGridPointer" Margin="150,0,0,0" Background="White" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left"/>
                </Grid>

                <Grid HorizontalAlignment="Left" Margin="6,10,0,0" Height="40" x:Name="RgbGradientGrid" Width="300" MouseLeftButtonDown="RgbGradientGrid_MouseLeftButtonDown" MouseMove="RgbGradient_MouseMove">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
                    </Grid.Effect>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0, 0.5">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop x:Name="MiddleStop" Color="Red" Offset="0.5"/>
                            <GradientStop Color="White"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Border HorizontalAlignment="Left" x:Name="rgbGradientPointer" BorderBrush="Black" BorderThickness="1" Margin="150,0,0,0" Width="3" VerticalAlignment="Stretch" Background="White"/>
                </Grid>


                <WrapPanel Grid.Column="1" Margin="0,10,0,0">
                    <TextBlock Text="R" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="RTextBox" Margin="10,0,0,0" Width="70"/>

                    <TextBlock Text="G" Margin="17,0,0,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="GTextBox" Margin="10,0,0,0" Width="70"/>

                    <TextBlock Text="B" Margin="17,0,0,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="BTextBox" Margin="10,0,0,0" Width="70"/>
                </WrapPanel>
                <WrapPanel Margin="0,10,0,0">
                        <TextBlock Text="HEX" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        <TextBox x:Name="HexCode" Margin="10,0,0,0" Width="80" TextChanged="HexCode_TextChanged"  TextWrapping="Wrap"/>
                    </WrapPanel>

                <WrapPanel HorizontalAlignment="Right" Margin="0,50,0,0" VerticalAlignment="Top">
                    <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel" Width="80"/>
                    <Button Margin="10,0,10,0" x:Name="OKButton" Click="OKButton_Click" Content="OK" Width="80"/>
                </WrapPanel>
            </StackPanel>
        </Grid>

    </StackPanel>
</UserControl>
