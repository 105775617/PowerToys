<UserControl x:Class="ColorPicker.Views.ColorEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorPicker.Views"
             mc:Ignorable="d"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:e="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:behaviors="clr-namespace:ColorPicker.Behaviors"
             d:DesignHeight="380" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.ColumnSpan="2" Height="40" Background="Transparent" VerticalAlignment="Top" IsHitTestVisible="True">
            <e:Interaction.Behaviors>
                <behaviors:DragWindowBehavior/>
            </e:Interaction.Behaviors>
            <Border
                Background="{DynamicResource SecondaryForegroundBrush}"
                Grid.ColumnSpan="2"
                Width="30"
                Opacity="0.9"
                Height="3"
                CornerRadius="1.5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,2,0,0" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:AppBarButton Width="40" >
                    <ui:AppBarButton.Icon>
                        <ui:FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                Glyph="&#xE115;" />
                    </ui:AppBarButton.Icon>
                </ui:AppBarButton>
                <ui:AppBarButton Command="{Binding CloseWindowCommand}" Width="40" >
                    <ui:AppBarButton.Icon>
                        <ui:FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                Glyph="&#xE10A;" />
                    </ui:AppBarButton.Icon>
                </ui:AppBarButton>
            </StackPanel>

        </Grid>
        <Grid Background="{DynamicResource SeondaryBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ui:AppBarButton Command="{Binding OpenColorPickerCommand}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                Glyph="&#xEF3C;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:ListView Margin="0,12,0,0" Grid.Row="1" Padding="0" ItemsSource="{Binding ColorsHistory}" SelectedItem="{Binding SelectedColor}" ItemContainerStyle="{DynamicResource ColorHistoryListViewStyle}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="64" Height="48">
                            <Border
                                Width="26"
                                Height="26"
                                CornerRadius="4"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="{Binding Path=., Converter={StaticResource colorToBrushConverter}}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
                                </Border.Effect>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Grid>

        <StackPanel Orientation="Vertical" Margin="12,124,12,12" Grid.Column="1" Grid.Row="1">
            <Border
                    Margin="0,12,0,0"
                    Width="308"
                    Height="36"
                    CornerRadius="4"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource ColorControlBackgroundBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="64"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="HEX" Opacity="0.4" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedColor, Converter={StaticResource colorToStringConverter}}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontFamily="Consolas" Grid.Column="1" FontSize="14" Margin="0,-2,0,0" VerticalAlignment="Center">
                              <e:Interaction.Behaviors>
                                <behaviors:CopyToClipboardBehavior CopiedIndicationBorder="{Binding ElementName=CopiedBorderIndicator}" />
                              </e:Interaction.Behaviors>
                    </TextBlock>
                </Grid>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
                </Border.Effect>
            </Border>
            <Border
                    Margin="0,12,0,0"
                    Width="308"
                    Height="36"
                    CornerRadius="4"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource ColorControlBackgroundBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="64"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CMYK" Opacity="0.4" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedColor, Converter={StaticResource colorToStringConverter}}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontFamily="Consolas" Grid.Column="1" FontSize="14" Margin="0,-2,0,0" VerticalAlignment="Center">
                              <e:Interaction.Behaviors>
                                <behaviors:CopyToClipboardBehavior CopiedIndicationBorder="{Binding ElementName=CopiedBorderIndicator}" />
                              </e:Interaction.Behaviors>
                    </TextBlock>
                </Grid>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
                </Border.Effect>
            </Border>

            <Border
                    Margin="0,12,0,0"
                    Width="308"
                    Height="36"
                    CornerRadius="4"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource ColorControlBackgroundBrush}">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="64"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="XAML" Opacity="0.4" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedColor, Converter={StaticResource colorToStringConverter}}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontFamily="Consolas" Grid.Column="1" FontSize="14" Margin="0,-2,0,0" VerticalAlignment="Center">
                              <e:Interaction.Behaviors>
                                <behaviors:CopyToClipboardBehavior CopiedIndicationBorder="{Binding ElementName=CopiedBorderIndicator}" />
                              </e:Interaction.Behaviors>
                    </TextBlock>
                </Grid>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
                </Border.Effect>
            </Border>

            <Border
                    Margin="0,12,0,0"
                    Width="308"
                    Height="36"
                    CornerRadius="4"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource ColorControlBackgroundBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="64"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="RGB" Opacity="0.4" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedColor, Converter={StaticResource colorToStringConverter}}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontFamily="Consolas" Grid.Column="1" FontSize="14" Margin="0,-2,0,0" VerticalAlignment="Center">
                              <e:Interaction.Behaviors>
                                <behaviors:CopyToClipboardBehavior CopiedIndicationBorder="{Binding ElementName=CopiedBorderIndicator}" />
                              </e:Interaction.Behaviors>
                    </TextBlock>
                </Grid>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
                </Border.Effect>
            </Border>
        </StackPanel>
        <Grid Grid.Column="1" Height="48" Margin="12,52,12,0" VerticalAlignment="Top">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="6" Opacity="0.32" ShadowDepth="2" />
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <Border Background="{Binding SelectedColor, Converter={StaticResource colorToBrushConverter}}" CornerRadius="4,0,0,4" Opacity="0.6" Grid.Column="0"/>
            <Border Background="{Binding SelectedColor, Converter={StaticResource colorToBrushConverter}}" Grid.Column="1" Opacity="0.8"/>
            <Border Background="{Binding SelectedColor, Converter={StaticResource colorToBrushConverter}}" Grid.Column="2"/>
            <Border Background="{Binding SelectedColor, Converter={StaticResource colorToBrushConverter}}" Grid.Column="3" Opacity="0.8"/>
            <Border Background="{Binding SelectedColor, Converter={StaticResource colorToBrushConverter}}" Grid.Column="4" Opacity="0.6" CornerRadius="0,4,4,0"/>
        </Grid>


        <Border x:Name="CopiedBorderIndicator" Opacity="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}">
            <TextBlock FontSize="16" Foreground="{DynamicResource PrimaryForegroundBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Run Text="&#xE16F; " FontFamily="Segoe MDL2 Assets"/>
                <Run Text="Copied to clipboard" FontWeight="SemiBold"/>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
